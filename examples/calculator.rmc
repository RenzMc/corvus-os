// Fungsi-fungsi matematika dasar
fungsi tambah(a, b):
    hasil a + b
selesai

fungsi kurang(a, b):
    hasil a - b
selesai

fungsi kali(a, b):
    hasil a * b
selesai

fungsi bagi(a, b):
    jika b == 0
        hasil "Error: Tidak bisa dibagi dengan nol"
    lainnya
        hasil a / b
    selesai
selesai

fungsi kuadrat(x):
    hasil x * x
selesai

